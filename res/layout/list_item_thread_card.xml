<?xml version="1.0" encoding="utf-8"?>
<com.totalday.dashchannew.widget.PostLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:baselineAligned="false">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<com.totalday.dashchannew.widget.AttachmentView
			android:id="@+id/thumbnail"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:layout_marginTop="10dp"
			android:layout_marginEnd="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginTop="6dp"
			android:layout_marginBottom="10dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/subject"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-2dp"
				android:layout_marginBottom="2dp"
				android:textColor="?attr/colorTextPost"
				android:tag="theme.textColor=post"
				android:fontFamily="sans-serif-light"
				android:textSize="16sp"
				android:maxLines="2" />

			<TextView
				android:id="@+id/comment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="?attr/colorTextThread"
				android:tag="theme.textColor=thread"
				android:textSize="12sp" />

		</LinearLayout>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="?android:attr/listDivider" />

	<LinearLayout
		android:id="@+id/show_original_post"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:background="?android:attr/selectableItemBackground">

		<com.totalday.dashchannew.widget.ThreadDescriptionView
			android:id="@+id/thread_description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingTop="8dp"
			android:paddingBottom="8dp" />

	</LinearLayout>

</com.totalday.dashchannew.widget.PostLinearLayout>
